FUNCTION IS PALINDROME (WORD:STRING;n,i:INTEGER; PALINDROME: BOOLEAN): BOOLEAN

VAR

BEGIN
    IF (i<n-1 AND WORD[i]==WORD [n-1]) THEN
        PALINDROME:=IS_PALINDROME (WORD, n-1, 1+1)
    ELSE IF (n-1==1) THEN 
        PALINDROME:=TRUE 
        RETURN PALINDROME
    ELSE
        PALINDROME:=TRUE

RETURN PALINDROME

END